@model NewMathWizardForm.Models.UserResponse

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>RsvpForm</title>
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body>
    <div class="panel panel-success" width="550px">
        <div class="panel-heading text-center"><h4>RSVP</h4></div>
        <div class="panel-body">
            <form class="p-a-1" asp-action="ShowResults" method="post">
                <div asp-validation-summary="All"></div>
               
                <div class="form-group">
                    <label asp-for="Left">Left:</label>
                    <input class="form-control" asp-for="Left" />
                </div>

                <div class="form-group">
                <label asp-for="Function">Function</label>
                <select class="form-control" asp-for="Function">
                    <option>Plus</option>
                    <option>Minus</option>
                    <option>Times</option>
                    <option>Divided By</option>
                    <option>Modulus</option>
                </select>
                </div>

                <div class="form-group">
                    <label asp-for="Right">Right: </label>
                    <input class="form-control" asp-for="Right" />
                </div>

                <div class="text-center">
                    <button class="btn btn-primary" type="submit">
                        Submit
                    </button>
                </div>

            </form>
        </div>
    </div>
</body>
</html>